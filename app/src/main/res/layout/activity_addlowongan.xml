<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundlowongan"
    tools:context=".addlowongan">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/add_lowongan_asset1" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judullamar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_bold"
            android:text="Tambah Lowongan"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_marginVertical="10dp"
            />

        <EditText
            android:hint="Nama lowongan"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_edittext"
            android:textSize="15sp"
            android:paddingHorizontal="15dp"
            android:fontFamily="@font/kanit_regular"
            android:layout_marginVertical="5dp"
            />

        <EditText
            android:hint="Lokasi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/round_edittext"
            android:textSize="15sp"
            android:paddingHorizontal="15dp"
            android:fontFamily="@font/kanit_regular"
            android:layout_marginVertical="5dp"
            />


        <EditText
            android:id="@+id/inputpertanyaan"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/description_column"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/kanit_regular"
            android:hint="@string/deskripsi"
            android:paddingHorizontal="15dp"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_btt_white"
        android:backgroundTint="@color/buttonlowongan"
        android:fontFamily="@font/kanit_semibold"
        android:text="Tambah lowongan"
        android:textAllCaps="false"
        android:textColor="@color/white" />



</RelativeLayout>