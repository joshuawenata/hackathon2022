<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundlowongan"
    tools:context=".addlowongan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/blobssupplier" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/kanit_bold"
            android:text="Tambah Supplier"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <EditText
            android:id="@+id/activityaddsupplier_inputnamasupplier"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_edittext"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/kanit_regular"
            android:hint="@string/nama_supplier"
            android:paddingHorizontal="15dp"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activityaddsupplier_inputLokasi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_edittext"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/kanit_regular"
            android:hint="Lokasi"
            android:paddingHorizontal="15dp"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/activityaddsupplier_inputDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/description_column"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/kanit_regular"
            android:hint="@string/deskripsi"
            android:paddingHorizontal="15dp"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_btt_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp">

            <ImageView
                android:id="@+id/activityaddsupplier_imageprofile"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:width="10dp"
                android:src="@drawable/avatar"/>

            <Button
                android:id="@+id/activityaddsupplier_btnTambahDariPerangkat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/round_btt_white"
                android:backgroundTint="@color/buttonsupplier"
                android:fontFamily="@font/kanit_semibold"
                android:text="@string/tambah_dari_perangkat"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/activityaddsupplier_btnTambahSupplier"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_btt_white"
        android:backgroundTint="@color/buttonsupplier"
        android:fontFamily="@font/kanit_semibold"
        android:onClick="AddSupplier"
        android:text="@string/tambah_supplier"
        android:textAllCaps="false"
        android:textColor="@color/white"
        tools:ignore="OnClick" />


</RelativeLayout>