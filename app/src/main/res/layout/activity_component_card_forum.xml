        <!--SHARE-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_more_vert_24"
            android:layout_weight="0"
            />
    </LinearLayout>



    <!--DESC-->
    <TextView
        android:id="@+id/componentcardforum_Pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/loremipsum"
        android:fontFamily="@font/kanit_regular"
        android:layout_marginVertical="5dp"
        />

    <!--STAR,COMMENT,ETC-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:id="@+id/star_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/round_gray"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/ic_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_star_rate_24" />

            <View
                android:id="@+id/gap1"
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginHorizontal="5dp"
                />

            <TextView
                android:id="@+id/star_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,1 ribu"
                android:fontFamily="@font/kanit_light"
                android:textColor="@android:color/darker_gray"
                android:layout_marginHorizontal="3dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_holder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            >

            <ImageButton
                android:id="@+id/ic_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_comment_24"
                android:adjustViewBounds="true"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:background="@null"
                android:onClick="pushtoDB"
                tools:ignore="OnClick" />

            <TextView
                android:id="@+id/comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234"
                android:fontFamily="@font/kanit_light"
                android:textColor="@android:color/darker_gray"
                android:layout_marginHorizontal="3dp"/>

            <EditText
                android:id="@+id/activityforumcardpage_replycontent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/kanit_regular"
                android:textSize="12dp"
                android:hint="Tambahkan jawaban"
                android:paddingHorizontal="10dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>