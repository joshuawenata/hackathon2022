<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="4dp"
    android:background="@drawable/description_column"
    android:elevation="1dp"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="6dp"
    >

    <!--PROFILE HEADER-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <!--PROFILE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/forum_answer_profile_pciture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/avatar"
                android:adjustViewBounds="true"
                android:maxWidth="36dp"
                android:maxHeight="36dp"
                android:scaleType="fitCenter"
                android:background="@drawable/round_btt_primary"
                app:tint="@color/white"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                >

                <!--TITLE-->
                <TextView
                    android:id="@+id/componentcardforum_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/title_soal_di_sini"
                    android:textColor="@color/elegant_black"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/componentcardforum_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="11sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        android:fontFamily="@font/kanit_regular"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  â€¢  "
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:id="@+id/componentcardforum_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22h"
                        android:textSize="11sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        android:fontFamily="@font/kanit_light"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/componentcardforum_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/anonymous"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/figma_gray"
                        android:textSize="11sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--SHARE-->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_more_horiz_24"
            android:layout_weight="0"
            />
    </LinearLayout>

    <!--DESC-->
    <TextView
        android:id="@+id/componentcardforum_Pertanyaan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:maxHeight="50dp"
        android:text="@string/loremipsum"
        android:fontFamily="@font/kanit_regular"
        android:layout_marginVertical="4dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="11sp"
        android:textColor="@color/figma_gray"
        />

    <!--STAR,COMMENT,ETC-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <LinearLayout
            android:id="@+id/star_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="2dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/componentcardforum_starbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:adjustViewBounds="true"
                android:maxWidth="18dp"
                android:minWidth="18dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_baseline_star_24"
                />

            <TextView
                android:id="@+id/componentcardforum_starcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_1_ribu"
                android:fontFamily="@font/kanit_light"
                android:textColor="@android:color/darker_gray"
                android:layout_marginHorizontal="3dp"
                android:textSize="11sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>