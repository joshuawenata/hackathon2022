    <!--PROFILE HEADER-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <!--PROFILE-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/forum_answer_profile_pciture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/avatar"
                android:adjustViewBounds="true"
                android:maxWidth="42dp"
                android:maxHeight="42dp"
                android:scaleType="fitCenter"
                android:background="@drawable/round_btt_primary"
                app:tint="@color/white"
                android:padding="5dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                >

                <!--TITLE-->
                <TextView
                    android:id="@+id/componentcardforum_judul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="Title soal di sini"
                    android:textColor="@color/elegant_black"
                    android:textSize="17dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/componentcardforum_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anonymous"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/figma_gray"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  •  "
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:id="@+id/componentcardforum_kategori"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  •  "
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:id="@+id/componentcardforum_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22h"
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        android:fontFamily="@font/kanit_light"
                        />



                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

<!--        &lt;!&ndash;GAP&ndash;&gt;-->
<!--        <View-->
