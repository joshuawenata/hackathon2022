<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="15dp"
    android:paddingTop="20dp"
    android:background="@drawable/description_column"
    android:layout_marginVertical="4dp"
    >

    <LinearLayout
        android:id="@+id/forum_answer_entity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <!--PROFILE HEADER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!--PROFILE-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/forum_answer_profile_pciture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/round_btt_primary"
                    android:maxWidth="42dp"
                    android:maxHeight="42dp"
                    android:padding="5dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/avatar"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/componentcardforumjawaban_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/kanit_regular"
                    android:text="Anonymous"
                    android:textColor="@color/figma_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:text="  â€¢  "
                    android:textColor="@color/figma_gray"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/componentcardforumjawaban_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_light"
                    android:gravity="bottom"
                    android:text="22h"
                    android:textColor="@color/figma_gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <!--GAP-->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!--SHARE-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_more_vert_24" />
        </LinearLayout>

        <!--DESC-->
        <TextView
            android:id="@+id/componentcardforumjawaban_jawaban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="5dp"
            android:fontFamily="@font/kanit_regular"
            android:text="@string/loremipsum" />

        <!--STAR,COMMENT,ETC-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/star_holder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/round_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp"
                android:paddingVertical="2dp">

                <ImageView
                    android:id="@+id/ic_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                <View
                    android:id="@+id/gap1"
                    android:layout_width="0.7dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="5dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/star_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="3,1 ribu"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/comment_holder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="5dp">

                <ImageButton
                    android:id="@+id/ic_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    android:maxWidth="20dp"
                    android:maxHeight="20dp"
                    android:onClick="pushtoDB"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_baseline_comment_24" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="3dp"
                    android:fontFamily="@font/kanit_light"
                    android:text="234"
                    android:textColor="@android:color/darker_gray" />


                <EditText
                    android:id="@+id/activityforumcardpage_replycontent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/kanit_regular"
                    android:hint="Tambahkan komentar"
                    android:paddingHorizontal="10dp"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>