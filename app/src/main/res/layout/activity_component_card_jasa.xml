<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="2dp"
    android:padding="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/gray_rectangle"
                android:padding="6dp"
                >
                <ImageView
                    android:id="@+id/componentcardjasa_image"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:src="@drawable/jasa_art"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"
                    >
                    <TextView
                        android:id="@+id/componentcardlowongan_namaUMKM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/figma_text"
                        android:maxWidth="150dp"
                        android:maxHeight="20dp"
                        android:text="Nama Jasa UMKM"
                        android:textSize="16sp"
                        android:maxLines="1"
                        />

                    <TextView
                        android:id="@+id/componentcardlowongan_lokasi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/figma_text"
                        android:maxWidth="150dp"
                        android:maxHeight="20dp"
                        android:text="Lokasi Jasa UMKM"
                        android:textSize="12sp"
                        android:maxLines="1"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/componentcardlowongan_deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loremipsum"
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/elegant_black"
                    android:textSize="11sp"
                    android:minWidth="250dp"
                    android:maxHeight="20dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginBottom="4dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>