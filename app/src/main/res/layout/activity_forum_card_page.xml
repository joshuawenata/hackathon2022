<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForumCardPage"
    android:background="@color/bgaabu"
    >

    <!--MAIN HOLDER-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--MAIN CONTAINER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <!--    TOP BAR     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/forum"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow_back"
                    android:onClick="backtoHome"
                    tools:ignore="OnClick"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="Forum"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--THUMBNAIL HOLDER-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gray_round_rectangle"
                android:padding="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_logo_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--FORUM TITLE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="A short or very long title to put in here"
                    android:fontFamily="@font/kanit_semibold"
                    android:textColor="@color/primary"
                    android:textSize="22sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="by Anonymous"
                        android:fontFamily="@font/kanit_light"
                        android:textColor="@color/figma_gray"/>

                    <TextView
                        android:id="@+id/dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  •  "
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nov 25"
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  •  "
                        android:textSize="13sp"
                        android:textColor="@color/figma_gray"
                        android:gravity="bottom"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_star_rate_24"
                        android:adjustViewBounds="true"
                        android:maxWidth="20dp"
                        android:maxHeight="20dp"
                        android:scaleType="fitCenter"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,8 ribu"
                        android:fontFamily="@font/kanit_light"
                        android:textColor="@color/figma_gray"
                        android:layout_marginHorizontal="3dp"/>
                </LinearLayout>
<!--                <View-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="1dp"-->
<!--                    android:background="@android:color/darker_gray"-->
<!--                    android:layout_marginVertical="10dp"-->
<!--                    />-->
            </LinearLayout>

            <!--JAWABAN FORUM TEXT-->
            <TextView
                android:id="@+id/jawaban_forum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jawaban Forum"
                android:fontFamily="@font/kanit_medium"
                android:textColor="@color/figma_gray"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="20dp"
                android:background="@color/white"
                android:paddingTop="7dp"
                />

            <!--ONE FORUM REPLY ENTITY-->
            <LinearLayout
                android:id="@+id/forum_answer_entity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                >

                <!--PROFILE HEADER-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <!--PROFILE-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/forum_answer_profile_pciture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/avatar"
                            android:adjustViewBounds="true"
                            android:maxWidth="42dp"
                            android:maxHeight="42dp"
                            android:scaleType="fitCenter"
                            android:background="@drawable/round_btt_primary"
                            app:tint="@color/white"
                            android:padding="5dp"
                            />

                        <TextView
                            android:id="@+id/reply"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anonymous"
                            android:fontFamily="@font/kanit_regular"
                            android:textColor="@color/figma_gray"
                            android:layout_marginLeft="10dp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  •  "
                            android:textSize="13sp"
                            android:textColor="@color/figma_gray"
                            android:gravity="bottom"
                            />

                        <TextView
                            android:id="@+id/answer_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="22h"
                            android:textSize="13sp"
                            android:textColor="@color/figma_gray"
                            android:gravity="bottom"
                            android:fontFamily="@font/kanit_light"
                            />
                    </LinearLayout>

                    <!--GAP-->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <!--SHARE-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_more_vert_24"
                        />
                </LinearLayout>

                <!--TITLE-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/kanit_semibold"
                    android:textColor="@color/figma_gray"
                    android:text="Reply Title Here"
                    android:textSize="19dp"
                    android:layout_marginTop="9dp"/>

                <!---->
                <TextView
                    android:id="@+id/reply_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/loremipsum"
                    android:fontFamily="@font/kanit_regular"
                    android:layout_marginVertical="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/star_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round_gray"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:id="@+id/ic_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_baseline_star_rate_24" />

                        <View
                            android:id="@+id/gap1"
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"
                            android:layout_marginHorizontal="5dp"
                            />

                        <TextView
                            android:id="@+id/star_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3,1 ribu"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginHorizontal="3dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/comment_holder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        >

                        <ImageView
                            android:id="@+id/ic_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_baseline_comment_24"
                            android:adjustViewBounds="true"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:scaleType="fitCenter"
                            />

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="234"
                            android:fontFamily="@font/kanit_light"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginHorizontal="3dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>