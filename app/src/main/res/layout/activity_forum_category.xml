                    android:id="@+id/activityforumcategory_saranusaha"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:background="@drawable/description_column"
                    android:elevation="2dp"
                    android:layout_margin="3dp"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:id="@+id/saranusaha_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_baseline_check_circle_outline_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:visibility="invisible"
                        />

                    <ImageButton
                        android:id="@+id/activityforumcategory_saranusahaic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_forum_modal_usaha_icon"
                        android:background="@null"
                        android:adjustViewBounds="true"
                        android:maxWidth="10dp"
                        android:maxHeight="10dp"
                        android:scaleType="fitCenter"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.7"
                        />

                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saran Usaha"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:fontFamily="@font/kanit_regular"
                        android:textColor="@color/figma_second_text"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
