<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgaabu"
    tools:context=".HomePage"
    >

    <!--CONTENT-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!--BACKGROUND-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/forum_bg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="100dp"
                >

                <!--MAIN HOLDER BUAT ITEM-ITEM LAIN SELAIN APP BAR-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="4"
                    android:layout_marginTop="20dp"
                    android:background=""
                    >

                    <!--MAIN HOLDER NYA JUDUL SAMA GAMBAR-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="45dp"
                        android:layout_marginTop="30dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_weight="3"
                        tools:ignore="NestedWeights"
                        android:paddingHorizontal="20dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit_bold"
                                android:text="@string/forum"
                                android:textColor="@color/white"
                                android:textSize="40sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit_light"
                                android:text="@string/forum_tagline"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginLeft="15dp"
                            >

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/forum_art" />
                        </LinearLayout>
                    </LinearLayout>


                    <!--MAIN HOLDER NYA FORUM POPULER-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:background="@drawable/forum_round_top"
                        android:paddingHorizontal="15dp"
                        android:paddingTop="10dp"
                        >

                        <!--MAIN HOLDER NYA SEARCH BAR-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            >

                            <!--EDIT TEXT SEARCH-->
                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/round_btt_white"
                                android:fontFamily="@font/kanit_regular"
                                android:hint="@string/forum_apa_yang_ingin_ditanyakan"
                                android:paddingVertical="7dp"
                                android:paddingHorizontal="12dp"
                                android:textSize="13sp"
                                android:textColorHint="@color/figma_gray"
                                android:textColor="@color/figma_gray"/>

                            <!--ICON NYA SEARCH-->
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_weight="0.05"
                                android:background="@drawable/roundcorner"
                                android:padding="7dp"
                                app:srcCompat="@drawable/search"
                                app:tint="@color/figma_gray"
                                />
                        </LinearLayout>

                        <!--MAIN HOLDER NYA TOPIK-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="15dp"
                            >

                            <!--TEXT "PILIH BERDASARKAN TOPIK"-->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/kanit_semibold"
                                android:text="Topik"
                                android:textColor="@color/elegant_black"
                                android:textSize="20sp"
                                android:layout_marginBottom="5dp"
                                />

                            <!--HOLDER NYA ANAK-ANAK TOPIK-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                >

                                <!--MODAL USAHA-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    >

                                    <ImageButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_forum_modal_usaha_icon"
                                        android:onClick="intoModal"
                                        tools:ignore="OnClick"
                                        android:background="@drawable/almost_square_white_imagebtt"
                                        android:padding="10dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/kanit_semibold"
                                        android:text="@string/modal_usaha"
                                        android:textColor="@color/figma_gray"
                                        android:textSize="11sp" />
                                </LinearLayout>

                                <!--PERIZINAN-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_forum_perizinan_icon"
                                        android:background="@drawable/almost_square_white_imagebtt"
                                        android:padding="10dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/kanit_semibold"
                                        android:text="@string/perizinan"
                                        android:textColor="@color/figma_gray"
                                        android:textSize="11sp" />
                                </LinearLayout>

                                <!--PEMASARAN-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    >

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_forum_pemasaran_icon"
                                        android:background="@drawable/almost_square_white_imagebtt"
                                        android:padding="10dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/kanit_semibold"
                                        android:text="@string/pemasaran"
                                        android:textColor="@color/figma_gray"
                                        android:textSize="11sp" />
                                </LinearLayout>

                                <!--LAINNYA-->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_weight="1"
                                    >

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        app:srcCompat="@drawable/ic_misc_other"
                                        android:background="@drawable/almost_square_white_imagebtt"
                                        android:padding="10dp"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/kanit_semibold"
                                        android:text="@string/lainnya"
                                        android:textColor="@color/figma_gray"
                                        android:textSize="11sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!--TEXT "FORUM POPULER MINGGU INI"-->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/kanit_semibold"
                            android:text="Rekomendasi Forum"
                            android:textColor="@color/elegant_black"
                            android:textSize="20sp"
                            android:layout_marginBottom="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/almost_blue"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/activityhome_recyclerweeklypopularforum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:itemCount="2"
                            tools:listitem="@layout/activity_component_card_forum"
                            android:paddingHorizontal="10dp"
                            android:layout_marginBottom="80dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </ScrollView>

    <!--MAIN CONSTRAINT BUAT APP BAR-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!--HOLDER NYA ITEM DI APP BAR-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/appbar"
            android:weightSum="5"
            >

            <!--ICON FORUM-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_forum_biru"
                android:onClick="intoHome"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                tools:ignore="OnClick" />

            <!--ICON SUPPLIER-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="intoSupplier"
                android:src="@drawable/ic_supplier_biru"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                tools:ignore="OnClick" />

            <!--NGASIH GAP-->
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                />

            <!--ICON LOWONGAN-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="intoLowongan"
                android:src="@drawable/ic_jasa_biru"
                tools:ignore="OnClick"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                />

            <!--ICON AKUN-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_akun_biru"
                android:onClick="intoProfile"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                />
        </LinearLayout>

        <!--ICON ADD-->
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:background="@drawable/round_btt_primary"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:onClick="intoAdd"
            android:padding="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>