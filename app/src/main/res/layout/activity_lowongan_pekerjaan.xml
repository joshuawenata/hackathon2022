<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundlowongan"
    tools:context=".LowonganPekerjaan">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lowongan_pekerjaan_asset1" />

    <TextView
        android:id="@+id/lbllowongan1"
        android:text="@string/lowongan_pekerjaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:maxWidth="200dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/lbllowongan2"
        android:text="@string/cari_pekerjaan_yang_sesuai_untuk_anda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toTopOf="@+id/lbllowongan1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/lbllowongan3"
        android:text="@string/lowongan_pekerjaan_yang_tersedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textColor="@color/baseBlue"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="@+id/lbllowongan2"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:text="@string/lihat_semua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:layout_marginLeft="250dp"
        tools:ignore="MissingConstraints"
        app:layout_constraintLeft_toLeftOf="@+id/lbllowongan3"
        app:layout_constraintTop_toTopOf="@+id/lbllowongan3"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/lowongancard1"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="70dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBaseline_toTopOf=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="30dp"
        card_view:layout_constraintTop_toTopOf="@id/lbllowongan3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/lowongancard3"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="70dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBaseline_toTopOf=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="80dp"

        card_view:layout_constraintTop_toTopOf="@id/lowongancard2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/lowongancard4"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="70dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBaseline_toTopOf=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="80dp"

        card_view:layout_constraintTop_toTopOf="@id/lowongancard3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/lowongancard5"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="70dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBaseline_toTopOf=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="80dp"
        card_view:layout_constraintTop_toTopOf="@id/lowongancard4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/lowongancard2"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="70dp"
        card_view:cardCornerRadius="20dp"
        card_view:layout_constraintBaseline_toTopOf=""
        tools:ignore="MissingConstraints"
        android:layout_marginTop="80dp"
        card_view:layout_constraintTop_toTopOf="@id/lowongancard1"
        card_view:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lowongan_pekerjaan_asset2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lowongan_pekerjaan_asset3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="40dp"/>

    <ImageView
        android:id="@+id/lowonganicon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconLowongan1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@id/lowonganicon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconLowongan2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lowonganicon1"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@id/lowonganicon3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconLowongan3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lowonganicon2"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@id/lowonganicon4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iconLowongan4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/lowonganicon3"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>