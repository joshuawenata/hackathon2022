<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@color/bgaabu"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/profile_bg" />


    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_medium"
            android:text="Akun Saya"
            android:textAlignment="center"
            android:textColor="@color/baseBlue"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                android:background="@drawable/roundcorner"
                android:backgroundTint="@color/baseBlue"
                android:padding="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <EditText
                android:id="@+id/activityprofile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/kanit_medium"
                android:text="Joshua Wenata Sunarto"
                android:textAlignment="center"
                android:textColor="@color/baseBlue"
                android:backgroundTint="@color/baseBlue"
                android:textSize="21sp"/>

            <EditText
                android:id="@+id/activityprofile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_light"
                android:text="081252346294"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:backgroundTint="@color/baseBlue"/>

        </LinearLayout>

        <!--    UBAH INFORMASI AKUN-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kanit_medium"
                    android:text="Ubah informasi akun"
                    android:textColor="@color/baseBlue"
                    android:textSize="12dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_edit_24"
                    android:background="@null"
                    android:onClick="editProfile"/>
            </LinearLayout>
        </LinearLayout>


        <!--        KELUAR AKUN     -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/kanit_medium"
                    android:text="Keluar"
                    android:textColor="@color/danger"
                    android:textSize="12dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_baseline_exit_to_app_24"
                    android:background="@null"
                    android:onClick="Logout"
                    tools:ignore="OnClick" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <!--MAIN CONSTRAINT BUAT APP BAR-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <!--HOLDER NYA ITEM DI APP BAR-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/appbar"
            android:weightSum="5"
            >

            <!--ICON FORUM-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_forum_white"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp" />

            <!--ICON SUPPLIER-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="intoSupplier"
                android:src="@drawable/ic_supplier_white"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                tools:ignore="OnClick" />

            <!--ICON LOWONGAN-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:onClick="intoLowongan"
                android:src="@drawable/ic_jasa_white"
                tools:ignore="OnClick"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                />

            <!--ICON AKUN-->
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_akun_biru"
                android:onClick="intoProfile"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>