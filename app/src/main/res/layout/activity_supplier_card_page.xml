<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupplierCardPage"
    android:background="@color/bgaabu"
    >

    <!--MAIN HOLDER-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!--MAIN CONTAINER-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <!--    TOP BAR     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/backgroundPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow_back"
                    android:onClick="backtoHome"
                    tools:ignore="OnClick"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:fontFamily="@font/kanit_semibold"
                    android:text="@string/supplier"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <!--THUMBNAIL HOLDER-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/gray_round_rectangle"
                android:padding="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_supplier_gray"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--FORUM TITLE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Supplier name to put in here"
                    android:fontFamily="@font/kanit_semibold"
                    android:textColor="@color/primary"
                    android:textSize="22sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/supplier_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_light"
                        android:text="FnB, Packaging"
                        android:textColor="@color/figma_gray" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="  •  "
                        android:textColor="@color/figma_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Sejak "
                        android:fontFamily="@font/kanit_light"
                        android:textColor="@color/figma_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="Nov 25"
                        android:fontFamily="@font/kanit_light"
                        android:textColor="@color/figma_gray"
                        android:textSize="13sp" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="  •  "-->
                    <!--                        android:textSize="13sp"-->
                    <!--                        android:textColor="@color/figma_gray"-->
                    <!--                        android:gravity="bottom"-->
                    <!--                        />-->

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_btt_white"
                        android:orientation="horizontal"
                        android:paddingHorizontal="4dp"
                        android:paddingVertical="2dp">

                        <ImageButton
                            android:id="@+id/activityforumcardpage_starButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:background="@null"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:onClick="AddStar"
                            android:scaleType="fitCenter"
                            app:srcCompat="@drawable/ic_baseline_star_border_24" />

                        <TextView
                            android:id="@+id/activityforumcardpage_starCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="3dp"
                            android:fontFamily="@font/kanit_light"
                            android:text="0"
                            android:textColor="@color/figma_gray" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!--JAWABAN FORUM TEXT-->
            <TextView
                android:id="@+id/jawaban_forum_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supplier Description"
                android:fontFamily="@font/kanit_medium"
                android:textColor="@color/figma_gray"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:paddingHorizontal="20dp"
                android:background="@color/white"
                android:paddingTop="7dp"
                />

            <!--DESCRIPTION-->
            <LinearLayout
                android:id="@+id/forum_answer_entity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:background="@color/white"
                android:layout_marginBottom="5dp"
                >

                <!---->
                <TextView
                    android:id="@+id/reply_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/loremipsum"
                    android:fontFamily="@font/kanit_regular"
                    android:layout_marginVertical="5dp"
                    />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:background="@color/white"
                        android:fontFamily="@font/kanit_regular"
                        android:text="Tertarik dengan supplier ini? Kontak sekarang"
                        android:textColor="@color/figma_gray"
                        android:textAlignment="center"
                        android:textSize="13sp" />

                    <!--CALL/CHAT BTT-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/round_btt_primary"
                        android:gravity="center"
                        android:padding="10dp"
                        android:layout_marginHorizontal="50dp"
                        android:layout_marginVertical="10dp"
                        >

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_misc_chat"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:background="@null"
                            />

                        <View
                            android:id="@+id/gap1"
                            android:layout_width="0.7dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_marginHorizontal="5dp"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_baseline_call_24"
                            android:layout_weight="1"
                            />

                    </LinearLayout>
            </LinearLayout>
            <!--INFORMASI TAMBAHAN-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>