<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_welcome"
    tools:context=".WelcomePage">

    <ImageView
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:src="@drawable/welcome_asset2"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="-120dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image1_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_asset1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/text1_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        app:layout_constraintTop_toTopOf="@+id/image1_welcome"
        android:layout_marginTop="350dp"
        android:textSize="40sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textColor="@color/font1_welcome"
        />
    <TextView
        android:id="@+id/text2_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your UKM partner anytime!"
        app:layout_constraintTop_toTopOf="@+id/text1_welcome"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn1_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/text2_welcome"
        android:layout_marginTop="50dp"
        android:width="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/register_a_new_account"
        android:backgroundTint="@color/button1_welcome"
        android:onClick="intoRegisterPage"
        tools:ignore="OnClick" />
    <Button
        android:id="@+id/btn2_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/btn1_welcome"
        android:layout_marginTop="50dp"
        android:width="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/login_into_account"
        android:textColor="@color/button1_welcome"
        android:backgroundTint="@color/white"
        android:onClick="intoLoginPage"
        tools:ignore="OnClick" />



</androidx.constraintlayout.widget.ConstraintLayout>