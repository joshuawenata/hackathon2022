<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundPrimary"
    tools:context=".WelcomePage">

    <ImageView
        android:id="@+id/welcome_asset1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-50dp"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_asset2"
        android:contentDescription="@string/welcome_asset_desc"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/welcome_asset2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/welcome_asset1"
            android:contentDescription="@string/welcome_asset_desc"
            />


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="15dp"
                >

                <TextView
                    android:id="@+id/welcome_title"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_title"
                    android:textSize="25sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/primary"
                    />

                <TextView
                    android:id="@+id/welcome_tagline"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_tagline"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_regis_btt_text"
                    android:background="@drawable/round_btt_primary"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAllCaps="false"
                    android:onClick="intoRegisterPage"
                    tools:ignore="OnClick"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_login_btt_text"
                    android:background="@drawable/round_btt_white"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAllCaps="false"
                    android:onClick="intoLoginPage"
                    tools:ignore="OnClick"
                    android:textColor="@color/primary"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>