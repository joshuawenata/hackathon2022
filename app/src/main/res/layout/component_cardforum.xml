<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/card"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/componentcardsupplier_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/account"
                app:shapeAppearanceOverlay="@style/Circular"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="5"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="5dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/componentcardforum_judul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/kanit_semibold"
                        android:textColor="@color/figma_text"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/componentcardforum_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FnB, Packaging"
                    android:fontFamily="@font/kanit_light"
                    android:textSize="11sp"
                    android:textColor="@color/figma_second_text"/>

                <TextView
                    android:id="@+id/componentcardforum_Pertanyaan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
                    android:fontFamily="@font/kanit_light"
                    android:textColor="@color/figma_text"
                    android:textSize="11sp"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/chat"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>